<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysTaskRecordMapper">

    <resultMap type="SysTaskRecord" id="SysTaskRecordResult">
        <result property="recordId"    column="record_id"    />
        <result property="taskId"    column="task_id"    />
        <result property="status"    column="status"    />
        <result property="member"    column="member"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysTaskRecordVo">
        select record_id, task_id, status, member, remark from sys_task_record
    </sql>

    <select id="selectSysTaskRecordList" parameterType="SysTaskRecord" resultMap="SysTaskRecordResult">
        <include refid="selectSysTaskRecordVo"/>
        <where>
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="member != null  and member != ''"> and member = #{member}</if>
        </where>
    </select>

    <select id="selectSysTaskRecordByRecordId" parameterType="Long" resultMap="SysTaskRecordResult">
        <include refid="selectSysTaskRecordVo"/>
        where record_id = #{recordId}
    </select>

    <insert id="insertSysTaskRecord" parameterType="SysTaskRecord" useGeneratedKeys="true" keyProperty="recordId">
        insert into sys_task_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null">task_id,</if>
            <if test="status != null">status,</if>
            <if test="member != null">member,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null">#{taskId},</if>
            <if test="status != null">#{status},</if>
            <if test="member != null">#{member},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateSysTaskRecord" parameterType="SysTaskRecord">
        update sys_task_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="member != null">member = #{member},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where record_id = #{recordId}
    </update>

    <delete id="deleteSysTaskRecordByRecordId" parameterType="Long">
        delete from sys_task_record where record_id = #{recordId}
    </delete>

    <delete id="deleteSysTaskRecordByRecordIds" parameterType="String">
        delete from sys_task_record where record_id in
        <foreach item="recordId" collection="array" open="(" separator="," close=")">
            #{recordId}
        </foreach>
    </delete>
</mapper>
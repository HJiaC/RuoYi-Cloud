<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysUserWalletMapper">

    <resultMap type="SysUserWallet" id="SysUserWalletResult">
        <result property="walletId"    column="wallet_id"    />
        <result property="userId"    column="user_id"    />
        <result property="status"    column="status"    />
        <result property="balance"    column="balance"    />
    </resultMap>

    <sql id="selectSysUserWalletVo">
        select wallet_id, user_id, status, balance from sys_user_wallet
    </sql>

    <select id="selectSysUserWalletList" parameterType="SysUserWallet" resultMap="SysUserWalletResult">
        <include refid="selectSysUserWalletVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="balance != null "> and balance = #{balance}</if>
        </where>
    </select>

    <select id="selectSysUserWalletByWalletId" parameterType="Long" resultMap="SysUserWalletResult">
        <include refid="selectSysUserWalletVo"/>
        where wallet_id = #{walletId}
    </select>

    <insert id="insertSysUserWallet" parameterType="SysUserWallet" useGeneratedKeys="true" keyProperty="walletId">
        insert into sys_user_wallet
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="status != null">status,</if>
            <if test="balance != null">balance,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="status != null">#{status},</if>
            <if test="balance != null">#{balance},</if>
        </trim>
    </insert>

    <update id="updateSysUserWallet" parameterType="SysUserWallet">
        update sys_user_wallet
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
            <if test="balance != null">balance = #{balance},</if>
        </trim>
        where user_id = #{userId}
    </update>

    <delete id="deleteSysUserWalletByWalletId" parameterType="Long">
        delete from sys_user_wallet where wallet_id = #{walletId}
    </delete>

    <delete id="deleteSysUserWalletByWalletIds" parameterType="String">
        delete from sys_user_wallet where wallet_id in
        <foreach item="walletId" collection="array" open="(" separator="," close=")">
            #{walletId}
        </foreach>
    </delete>
</mapper>